%Политические взгляды ярлов в гражданской войне
взгляды(элисиф, империя).
взгляды(игмунд, империя).
взгляды(лайла, братья_бури).
взгляды(ульфрик, братья_бури).
взгляды(балгруф, нейтральные).

правитель(элисиф, солитьюд).
правитель(игмунд, маркарт).
правитель(лайла, рифтен).
правитель(ульфрик, виндхельм).
правитель(балгруф, вайтран).

рекомендации_по_расе(Раса, Список) :-
    findall(Класс, классовые_расы(Класс, Раса), Список).

рекомендации_по_классу_раса(Класс,  Список) :-
    findall(Раса, классовые_расы(Класс, Раса),  Список).

рекомендации_по_классу_Фракция(Класс,  Список) :-
    findall(Фракция, классовые_фракции(Класс, Фракция),  Список).

рекомендации_по_классу_навыки(Класс,  Список) :-
    findall(Навык, классовые_навыки(Класс, Навык),  Список).

рекомендации_по_классу_созвездие(Класс,  Список) :-
    findall(Созвездие, классовое_созвездие(Класс, Созвездие),  Список).

% Владения Скайрима, чьи ярлы заинтересованы в идеях Имперского легиона
оплот_империи(Владение) :-
    правитель(Ярл, Город),
    столица(Город, Владение),
    взгляды(Ярл, империя).

% Владения Скайрима, чьи ярлы заинтересованы в идеях Братьев Бури
оплот_братьев_бури(Владение) :-
    правитель(Ярл, Город),
    столица(Город, Владение),
    взгляды(Ярл, братья_бури).

% Владения Скайрима, чьи ярлы не заинтересованы ни одной фракцией,
% воюющих в гражданской войне
оплот_нейтралитета(Владение) :-
    правитель(_, Город),
    столица(Город, Владение),
    \+ оплот_империи(Владение),
    \+ оплот_братьев_бури(Владение).


% Определяем фракции, которые участвуют в войне(По политическим
% взглядам правителей)
фракции_гражданской_войны(Фракции) :-
	фракция(Фракции),
	взгляды(_, Фракции).


% Определяем фракции, которые не участвуют в войне(стандартные гильдии)
гильдии(Фракции) :-
	фракция(Фракции),
	\+ взгляды(_, Фракции).
